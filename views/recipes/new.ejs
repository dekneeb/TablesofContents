<body>
    <div class="logo"> </div>
    <h1>Recipe Create Form:</h1> 
    <form action="/recipes" method="POST">
        <p>Title: </p>
        <input name="title" type="text" placeholder="add title here">

        <p>Image: </p>
        <input name="img" placeholder="add image here">

        <p>Category: </p>
        <select id='category' name='category'  >
            <option> ---Select Option--- </option>
            <option value='Other'> Other </option>
            <%for(let i=0;i<category.length; i++){%>
                <option value="<%=category[i]._id%>"><%= category[i].title%></option>
               
            <% }%>
            
        </select> 
         
        <!-- <input type="text" name="category" id="color" style='display: none' /> -->
        

        <p>Food Type: </p>
        <select id='foodType' name ='foodType'  >  
           
            <option> ---Select Option--- </option>
            <!-- <option value='Other'> Other </option> -->
            <%for(let i=0;i<type.length; i++){%>
                <option value="<%=type[i]%>"><%= type[i]%></option>
               
            <% }%>
                
            </select>  

        <p>Time: </p>
        <input name="time" type='text' placeholder="add time">

        <p>Description: </p>
        <textarea name="description" cols="30" rows="10" placeholder='write a description'></textarea>

        <p>Ingredients  (separate each ingredient with a comma): </p>
        <textarea name="ingredients" cols="30" rows="10" placeholder='add ingredients'></textarea>

        <p>Instructions (separate each instruction with a semi-colon): </p>
        <textarea name="instructions" cols="30" rows="10" placeholder='add instructions'></textarea>

        
          
        
        <br><br>
        <input type="submit" value="Create New Recipe">
    </form>
    <br>
    <a href='/recipes'>Return to Recipes</a>
</body>
